<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title"><%=  @post.title %></h3>
  </div>
  <div class="panel-body">
    <%=  @post.body %>
  </div>
  <div class="panel-footer">

	<%= link_to "Back", root_path, :class => 'btn btn-warning btn-sm' %>
	<% if user_signed_in? %>
		<!-- Single button -->
		<div class="btn-group pull-right">
		 	<button type="button" class="btn btn-info btn-sm">Action</button>
		  	<button type="button" class="btn btn-info btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
		    	<span class="caret"></span>
		    	<span class="sr-only">Toggle Dropdown</span>
		  	</button>
			 <ul class="dropdown-menu">
			  	<% if @post.user_id == current_user.id %>	
				    <li><%= link_to 'Edit'.html_safe, edit_post_path(@post) %></li>
				    <li><%= link_to 'Delete'.html_safe, post_path(@post),method: :delete, data: { confirm: "Are you sure ? "} %></li>
			    	<li role="separator" class="divider"></li>
			    <% end %>
			    <li><%= link_to "Comment", new_post_comment_path(@post) %></li>
			</ul>
		</div>
	<% end %>  	  	
	</div> 
</div>
<% if user_signed_in? %>
	<% if @post.user_id == current_user.id %>	
		<%= render @post.comments %>
	<% end %>
<% end %>




