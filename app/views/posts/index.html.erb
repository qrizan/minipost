<% if @posts.count == 0%>
	<h5>No post available in this category</h5>
<% else %>
	<% @posts.each do |post| %>
		<div class="panel panel-info">
		  <div class="panel-heading">
		  <h3 class="panel-title"><%= link_to post.title, post_path(post) %>
		  	<span class="label label-primary pull-right"><%= post.category.name %></span>
		  </h3>
		  </div>
		  <div class="panel-body">
		    <%= truncate(post.body, length: 250) %>
		  </div>
		</div>
	<% end %>
<% end %>